<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MovieFlix</title>
</head>
<body>
    <h1>MovieFlix</h1>
    <h2>Results</h2>
    <% if (results.length >0) { %>
        <% results.forEach(movie => { %>
            <li><strong><%=movie.Title%></strong> -<%= movie.Year %>
                <form method="get" action="/watch"> 
                    <input type="text" value="<%= movie.Title %>" name="title" readonly style="display: none;">
                    <button>Watch Now</button>
                </form>
            </li>
            <img src="<%= movie.Poster %>" alt="<%= movie.Title %>">
        <% }) %>
    <% } else{ %>
        <h3>No Results Found</h3>
    <% } %>
</body>
</html>